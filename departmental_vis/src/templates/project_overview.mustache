<div class="pure-g project_overview">
  <div class="pure-u-1">
    <h3 class="rating {{rating_class}}">{{name}}</h3>
    <p class="variance {{variance_direction}}"><span class="n">{{variance}}</span> {{variance_direction}} budget.</p>
  </div>
</div>
<div class="pure-g">
  <div class="pure-u-1-3">
    <dl>
      <dt>Department:</dt>
      <dd>{{department_name}}</dd>
      <dt>2013 Budget:</dt>
      <dd>{{budget}}</dd>
      <dt>2013 Forecast:</dt>
      <dd>{{spend}}</dd>
      <dt>Total life budget:</dt>
      <dd>{{total_life_budget}}</dd>
    </dl>
  </div>
  <div class="pure-u-2-3">
    <ul class="tabs">
      <li class="description">
        Description
      </li>
      <li class="commentary">
        Departmental commentary
      </li>
      <li class="budget_variance">
        Budget variance
      </li>
      <li class="budget_life">
        Budget life
      </li>
      <li class="schedule">
        Schedule
      </li>
    </ul>
    <ul class="tab_contents">
      <li class="description">
        {{&description}}
      </li>
      <li class="commentary">
        {{&department_commentary}}
      </li>
      <li class="budget_variance">
        {{&budget_variance_narrative}}
      </li>
      <li class="budget_life">
        {{&budget_life_narrative}}
      </li>
      <li class="schedule">
        {{&schedule_narrative}}
      </li>
    </ul>
  </div>
</div>
